# MapTag BF Backend Environment Configuration

# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://maptag:password123@localhost:5432/maptag_bf

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# JWT Secret for authentication (change this in production!)
JWT_SECRET=maptag-bf-jwt-secret-change-in-production-this-is-very-important

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# API Keys (for future AI features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# External Services
WEBHOOK_URL=
NOTIFICATION_EMAIL=admin@maptag.bf

# Production Settings
TRUST_PROXY=false
SESSION_SECRET=another-secret-key-change-in-production

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=maptag-backups
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1